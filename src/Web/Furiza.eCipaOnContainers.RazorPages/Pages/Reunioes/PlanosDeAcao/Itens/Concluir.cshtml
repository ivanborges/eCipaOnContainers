@page
@model ConcluirModel
@{
    Layout = null;
}

<div class="box box-widget blockableDiv" style="margin-bottom: 0; box-shadow: 0 0 0 0">
    <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="/Reunioes/PlanosDeAcao/Itens/Concluir" data-ajax-begin="blockDivForAjaxRequest()" data-ajax-complete="unblockDivForAjaxRequest()" data-ajax-success="handleRedirectInAjaxRequest" data-ajax-failure="handleUserInteractionInAjaxFailure">
        <input asp-for="ReuniaoId" type="hidden" value="@Model.ReuniaoId" />
        <input asp-for="PlanoDeAcaoId" type="hidden" value="@Model.PlanoDeAcaoId" />
        <input asp-for="ItemId" type="hidden" value="@Model.ItemId" />
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <div class="input-group date">
                            <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                            <input asp-for="PlanosDeAcaoItensConcluirPost.DataRealizacao" type="text" class="form-control pull-right datepicker" placeholder="Data de Realização">
                        </div>
                        <span asp-validation-for="PlanosDeAcaoItensConcluirPost.DataRealizacao" style="font-size: 10px; color: #a94442;"></span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <button class="btn btn-xs btn-default btn-block" type="submit" data-submit-ajaxform-pace>
                        <i class="fa fa-check"></i>
                        Concluir
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
        $(function () {
            applyPaceOnAjaxFormSubmit();
            applyLayoutOnCommonUIElements();
        });
</script>