@page
@model GerenciarAssuntosModel
@{
    Layout = null;
}

<div class="box box-widget blockableDiv" style="margin-bottom: 0; box-shadow: 0 0 0 0">
    <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-url="/Reunioes/Atas/GerenciarAssuntos" data-ajax-begin="blockDivForAjaxRequest()" data-ajax-complete="unblockDivForAjaxRequest()" data-ajax-success="handleRedirectInAjaxRequest" data-ajax-failure="handleUserInteractionInAjaxFailure">
        <input asp-for="ReuniaoId" type="hidden" value="@Model.ReuniaoId" />
        <input asp-for="AtaId" type="hidden" value="@Model.AtaId" />
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <select asp-for="ReunioesAtasAssuntosPost.ClassificacaoDaInformacao" class="form-control select2" data-placeholder="Classificação da Informação">
                            <option value="0">@Furiza.eCipaOnContainers.RazorPages.RestClients.Cipas.ClassificacaoDaInformacao.Público.GetDisplayAs()</option>
                        </select>
                        <span asp-validation-for="ReunioesAtasAssuntosPost.ClassificacaoDaInformacao" style="font-size: 10px; color: #a94442;"></span>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <select asp-for="ReunioesAtasAssuntosPost.Tipo" asp-items="Html.GetEnumSelectList<Furiza.eCipaOnContainers.RazorPages.RestClients.Cipas.Reunioes.TipoAssunto>()" class="form-control select2" data-placeholder="Tipo do Assunto">
                            <option></option>
                        </select>
                        <span asp-validation-for="ReunioesAtasAssuntosPost.Tipo" style="font-size: 10px; color: #a94442;"></span>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                    <div class="form-group has-feedback">
                        <input asp-for="ReunioesAtasAssuntosPost.Keywords" type="text" class="form-control" placeholder="Keywords">
                        <span class="glyphicon glyphicon-tags form-control-feedback"></span>
                        <span asp-validation-for="ReunioesAtasAssuntosPost.Keywords" style="font-size: 10px; color: #a94442;"></span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group has-feedback">
                        <textarea rows="3" asp-for="ReunioesAtasAssuntosPost.Descricao" type="text" class="form-control" placeholder="Descrição"></textarea>
                        <span asp-validation-for="ReunioesAtasAssuntosPost.Descricao" style="font-size: 10px; color: #a94442;"></span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <button class="btn btn-xs btn-default btn-block" type="submit" data-submit-ajaxform-pace>
                        <i class="fa fa-check"></i>
                        Concluir
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $(function () {
        applyPaceOnAjaxFormSubmit();
        applyLayoutOnCommonUIElements();
    });
</script>